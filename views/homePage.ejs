    <!--munu side bar-->
    <script>
        function toggleMenu() {
            var menu = document.getElementById("menu");
            menu.classList.toggle("active");
        }
    </script>

    <script>
        function scrollLeft(carouselId) {
            const carousel = document.getElementById(carouselId);
            const items = carousel.querySelector('.carousel-items');
            items.scrollBy({ left: -220, behavior: 'smooth' });
        }

        function scrollRight(carouselId) {
            const carousel = document.getElementById(carouselId);
            const items = carousel.querySelector('.carousel-items');
            items.scrollBy({ left: 220, behavior: 'smooth' });
        }
        /*ทำให้ banner เลื่อนภาพถัดไปได้*/
        const slider = document.querySelector('.banner-slider');
        const images = document.querySelectorAll('.banner-slider img');
        let index = 0;

        setInterval(() => {
            index = (index + 1) % images.length;
            slider.style.transform = `translateX(-${index * 600}px)`;
        }, 3000);

        // เริ่มใช้งาน Swiper
        document.addEventListener('DOMContentLoaded', function() {
        // เริ่มใช้งาน Swiper
            const swiper = new Swiper('.banner-slider', {
                loop: true, // ทำให้วนลูปกลับไปที่เริ่มต้น
                autoplay: {
                delay: 3000, // ระยะเวลาเลื่อน 3 วินาที
                },
                // ไม่มีการกำหนด navigation (ปุ่ม next/prev)
                spaceBetween: 10, // ระยะห่างระหว่างสไลด์
                slidesPerView: 1, // แสดงหนึ่งภาพต่อการเลื่อน
                grabCursor: true, // ทำให้สามารถลากสไลด์ได้
            });
        });
   </script>
