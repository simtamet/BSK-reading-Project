body {
    font-family: Arial, sans-serif;
    background-color: #8ECAE6;
    text-align: center;
    margin: 0;
    padding: 0;
}

.navbar {
    background-color: #FFB703;
    padding: 15px;
    text-align: left;
    font-weight: bold;
    position: fixed;
    width: 100%;
    top: 0;
    left: 0;
    z-index: 1000;
}

.menu-btn {
    cursor: pointer;
    font-size: 24px;
    margin-right: 10px;
}

/* Sidebar Menu (กลับมาเป็นแบบเก่า) */
.menu {
    position: absolute;
    left: -250px;
    top: 50px;
    width: 200px;
    background-color: #ffffff;
    padding: 15px;
    transition: 0.3s ease-in-out;
}

.menu a {
    display: block;
    color: #023047;
    padding: 10px;
    text-decoration: none;
}

.menu a:hover {
    background-color: #FFB703;
}

.menu.active {
    left: 0;
}

/* Dark Mode Toggle */
.dark-mode-toggle {
    color: #023047;
    padding: 10px;
}

/* Container */
.container {
    max-width: 350px;
    margin: 120px auto;
    padding: 20px;
    /* background: rgba(255, 255, 255, 0.2);*/
}

/* Labels */
.input-label {
    display: block;
    text-align: left;
    font-weight: bold;
    margin: 10px 0 5px;
    color: #023047;
}

/* Input Fields */
.input-field {
    width: calc(100% - 20px);
    padding: 10px;
    border: none;
    border-radius: 8px;
}

/* Password Field (Icon on the right side) */
.password-container {
    position: relative;
}

.lock-icon {
    position: absolute;
    right: 10px;
    top: 50%;
    transform: translateY(-50%);
    width: 20px;
    height: 20px;
}

/* Button */
.login-btn {
    background-color: #023047;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    margin-top: 15px;
}

h2 {
    font-size: 3rem; /* ปรับขนาดฟอนต์ */
    font-weight: bold; /* ทำให้ตัวหนา */
    text-align: center; /* จัดตำแหน่งข้อความให้อยู่กลาง */
    color: #023047; /* กำหนดสีของข้อความ */
}
img {
    margin-bottom: 0px; /* เพิ่มช่องว่างเล็กน้อยใต้ภาพ */
}

h2, h3 {
    margin-top: 0; /* เอาช่องว่างด้านบนออก */
    margin-bottom: 0px; /* เพิ่มช่องว่างเล็กน้อยระหว่าง <h2> และ <h3> */
    padding: 0; /* เอา padding ออก */
    text-align: center; /* จัดตำแหน่งข้อความให้อยู่กลาง */
}

