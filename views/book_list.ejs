            font-size: 20px;
            cursor: pointer;
        }

        .popup-body {
            display: flex;
            gap: 20px;
        }

        /* ส่วนอัพโหลดรูป */
        .book-cover-upload {
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .upload-area {
            width: 150px;
            height: 220px;
            border: 2px dashed #023047;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            cursor: pointer;
        }

        .upload-area img {
            width: 50px;
            height: 50px;
        }

        #bookImage {
            display: none;
            /* ซ่อน input file */
        }

        .book-info {
            flex: 2;
            display: flex;
            flex-direction: column;
            gap: 8px;
            /* ลดระยะห่างระหว่างช่อง */
            max-width: 300px;
            /* กำหนดความกว้างสูงสุดให้ช่องกรอกข้อมูล */
        }

        .book-info input {
            width: 90%;
            /* ปรับให้ไม่กว้างเต็มพื้นที่ */
            padding: 8px;
            /* ลดขนาด padding */
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 14px;
            /* ลดขนาดตัวอักษรเล็กน้อย */
        }


        .add-book-btn {
            background-color: #023047;
            color: white;
            padding: 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .add-book-btn:hover {
