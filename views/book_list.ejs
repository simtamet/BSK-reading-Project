    <!-- add books -->
    <script>
        function openPopup() {
            document.getElementById("bookPopup").style.display = "flex";
        }

        function closePopup() {
            document.getElementById("bookPopup").style.display = "none";
        }

        // ให้แน่ใจว่า popup ถูกซ่อนไว้ตั้งแต่โหลดหน้า
        document.addEventListener("DOMContentLoaded", function () {
            document.getElementById("bookPopup").style.display = "none";
        });

    </script>
    <script>
        function previewBookCover(event) {
            var file = event.target.files[0]; // รับไฟล์ที่ถูกเลือก
            var preview = document.getElementById("bookPreview"); // รูปปกหนังสือ
            var text = document.getElementById("uploadText"); // ข้อความ "Please insert the book cover"

            if (file) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    preview.src = e.target.result; // เปลี่ยนรูปให้เป็นภาพที่เลือก
                };
                reader.readAsDataURL(file);
                text.style.display = "none"; // ซ่อนข้อความเมื่อมีการเลือกรูป
            }
        }

    </script>
    <script>
        function addBook() {
    var title = document.getElementById("bookTitle").value;
    var author = document.getElementById("bookAuthor").value;
    var imageInput = document.getElementById("bookImage");
    var bookList = document.getElementById("bookList");

    // ตรวจสอบว่ามี bookList จริงหรือไม่
    if (!bookList) {
        alert("Error: Book list container not found!");
        return;
    }

    if (!title || !author || !imageInput.files[0]) {
        alert("Please fill in all required fields!");
        return;
    }

    var reader = new FileReader();
    reader.onload = function (e) {
        // สร้าง div สำหรับหนังสือใหม่
        var newBook = document.createElement("div");
        newBook.classList.add("book");

        var bookImg = document.createElement("img");
        bookImg.src = e.target.result;
        bookImg.alt = title;

        var bookText = document.createElement("p");
        bookText.innerHTML = `${title} <br> by ${author}`;

        newBook.appendChild(bookImg);
        newBook.appendChild(bookText);
        
        // เพิ่มหนังสือใหม่เข้าไปใน bookList
        bookList.insertBefore(newBook, bookList.querySelector(".add-book"));

        closePopup(); // ปิด pop-up หลังเพิ่มหนังสือแล้ว

        // รีเซ็ตค่า input
        document.getElementById("bookTitle").value = "";
        document.getElementById("bookAuthor").value = "";
        document.getElementById("bookImage").value = "";
        document.getElementById("bookPreview").src = "images/profile-icon.svg";
        document.getElementById("uploadText").style.display = "block";
    };

    reader.readAsDataURL(imageInput.files[0]);
}



    </script>
