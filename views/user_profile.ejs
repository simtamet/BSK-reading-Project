    <!--munu side bar-->
    <script>
        function toggleMenu() {
            var menu = document.getElementById("menu");
            menu.classList.toggle("active");
        }
    </script>
    <!-- profile insert -->
    <script>
        function loadFile(event) {
            var output = document.getElementById('profile-img');
            output.src = URL.createObjectURL(event.target.files[0]);
        }
    </script>
</body>
