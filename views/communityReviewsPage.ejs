<script>
    document.addEventListener('click', function (event) {
        // เช็คว่าเป็นปุ่มไลค์ที่ถูกกด
        if (event.target.closest('.like-btn')) {
            const button = event.target.closest('.like-btn');
            const likeCount = button.querySelector('.like-count');
            const reviewId = button.getAttribute('data-review-id'); // ควรมี id หรือ attribute เฉพาะที่ระบุรีวิว

            // เพิ่มจำนวนไลค์ใน localStorage
            let currentLikes = parseInt(likeCount.textContent);
            currentLikes++;
            likeCount.textContent = currentLikes;

            // เซฟจำนวนไลค์ใน localStorage
            localStorage.setItem(`likeCount_${reviewId}`, currentLikes);
        }

        // เช็คว่าเป็นปุ่มคอมเมนต์ที่ถูกกด
        if (event.target.closest('.comment-btn')) {
            const button = event.target.closest('.comment-btn');
            const commentCount = button.querySelector('.comment-count');
            const reviewId = button.getAttribute('data-review-id'); // ควรมี id หรือ attribute เฉพาะที่ระบุรีวิว

            // เพิ่มจำนวนคอมเมนต์ใน localStorage
            let currentComments = parseInt(commentCount.textContent);
            currentComments++;
            commentCount.textContent = currentComments;

            // เซฟจำนวนคอมเมนต์ใน localStorage
            localStorage.setItem(`commentCount_${reviewId}`, currentComments);
        }
    });

    // เมื่อโหลดหน้าใหม่ให้โหลดข้อมูลจาก localStorage
    document.addEventListener('DOMContentLoaded', function () {
        document.querySelectorAll('.like-btn').forEach(function (button) {
            const likeCount = button.querySelector('.like-count');
            const reviewId = button.getAttribute('data-review-id');

