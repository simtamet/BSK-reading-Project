        }

        .review-text {
            color: #555;
            font-size: 16px;
            line-height: 1.5;
            margin-bottom: 10px;
        }

        .review-footer {
            margin-top: 10px;
            text-align: right;
            font-size: 14px;
            color: #888;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .review-actions {
            display: flex;
            gap: 10px;
            /* เพิ่มระยะห่างระหว่างปุ่ม */
        }

        .review-actions button {
            background-color: #0077b6;
            color: white;
            border: none;
            padding: 8px 15px;
            font-size: 14px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            display: flex;
            align-items: center;
            gap: 10px;
            /* ระยะห่างระหว่างไอคอนและข้อความ */
        }

        .review-actions button i {
            font-size: 18px;
        }

        .review-actions button:hover {
            background-color: #005f82;
        }

        .like-btn {
            background-color: #4caf50;
        }

        .like-btn:hover {
            background-color: #45a049;
        }

        .comment-btn {
            background-color: #ff8c00;
        }

        .comment-btn:hover {
            background-color: #e07b00;
        }

        .like-count,
        .comment-count {
            font-size: 14px;
            font-weight: bold;
        }
    </style>

