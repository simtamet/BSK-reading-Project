        .menu.active {
            left: 0;
        }

        /* Dark Mode Toggle */
        .dark-mode-toggle {
            color: #023047;
            padding: 10px;
        }


        .community-reviews h3 {
            font-size: 18px;
            font-weight: bold;
            color: #023047;
            text-align: left;
            /* ให้ข้อความชิดซ้าย */
            width: 100%;
            margin-top: 10px;
            /* ลดระยะห่างจากด้านบน */
            margin-bottom: 10px;
            /* ลดระยะห่างจากรีวิว */
        }

        .review-container {
            margin-top: 10px;
            /* ลดระยะห่างจาก Community Ratings */
            display: flex;
            flex-direction: column;
            gap: 20px;

        }

        .review-card {
            width: 100%;
            max-width: 800px;
            padding: 20px;
            display: flex;
            flex-direction: row;
            align-items: flex-start;
            margin-bottom: 20px;
            min-height: 200px;
            border-bottom: 2px solid #023047;
            /* เพิ่มความสูงขั้นต่ำ */
        }

        .profile-pic {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            object-fit: cover;
            margin-right: 20px;
        }

        .review-content {
            flex-grow: 1;
        }

        .review-header {
            display: flex;
            align-items: center;
            /* จัดให้ทุกส่วนอยู่ในแนวนอน */
            margin-bottom: 10px;
        }

        .review-header .username {
            font-size: 18px;
            font-weight: bold;
            color: #333;
            margin-right: 10px;
            /* เพิ่มระยะห่างระหว่างชื่อและดาว */
        }

        .review-header .rating {
            color: #FFD700;
            font-size: 18px;
            margin-right: 10px;
            /* เพิ่มระยะห่างระหว่างดาวและข้อความ "rated it" */
        }

