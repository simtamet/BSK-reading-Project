            const readTime = document.getElementById('read-time').value.trim();
            const readPages = document.getElementById('read-pages').value.trim();
            const status = document.getElementById('status').value.trim();
    
            const saveButton = document.getElementById('saveButton'); 
            if (readTime && readPages && status) {
                saveButton.style.display = 'block'; // แสดงปุ่ม "Save"
            } else {
                saveButton.style.display = 'none'; // ซ่อนถ้ายังมีค่าว่าง
            }
        }
    
        // ซ่อนปุ่ม "Save" เริ่มต้น
        document.querySelectorAll('.save-button').forEach(btn => btn.style.display = 'none');
    
        // ตรวจสอบการกรอกข้อมูลใน pop-up "Read time"
        document.querySelectorAll('#hours, #minutes, #seconds').forEach(input => {
            input.addEventListener('input', function () {
                const saveBtn = document.getElementById('read-time-save-btn');
                saveBtn.style.display = (document.getElementById('hours').value || 
                                         document.getElementById('minutes').value || 
                                         document.getElementById('seconds').value) ? 'block' : 'none';
            });
        });
    
        // ตรวจสอบการกรอกข้อมูลใน pop-up "Read pages"
        document.getElementById('pages').addEventListener('input', function () {
            document.getElementById('read-pages-save-btn').style.display = this.value ? 'block' : 'none';
        });
    
        // ตรวจสอบการเลือก Status
        document.getElementById('status-select').addEventListener('change', function () {
            document.getElementById('status-save-btn').style.display = 'block';
        });
    
        // ปุ่ม Save
        document.getElementById("read-time-save-btn").addEventListener("click", function() {
            // ดึงค่าจาก input field
            let hours = document.querySelector("#read-time-popup .timer-group:nth-child(1) input").value;
            let minutes = document.querySelector("#read-time-popup .timer-group:nth-child(2) input").value;
            let seconds = document.querySelector("#read-time-popup .timer-group:nth-child(3) input").value;

            // แปลงค่าให้อยู่ในรูปแบบ "HH:MM:SS"
            let formattedTime = `${hours.padStart(2, '0')}:${minutes.padStart(2, '0')}:${seconds.padStart(2, '0')}`;

            // นำค่าไปแสดงในช่อง Read Time
            document.getElementById("read-time").value = formattedTime;

            // ปิด popup
            document.getElementById("read-time-popup").style.display = "none";
        });

        document.getElementById("read-time-cancel-btn").addEventListener("click", function() {
            // ปิด popup เมื่อกด Cancel
            document.getElementById("read-time-popup").style.display = "none";
        });

    
        document.getElementById('read-pages-save-btn').addEventListener('click', function () {
            document.getElementById('read-pages').value = document.getElementById('pages').value || '0'; // ใช้ .value
            this.style.display = 'none';
            document.getElementById('read-pages-popup').style.display = 'none';
            checkAllInputs();
        });
    
        document.getElementById('status-save-btn').addEventListener('click', function () {
            document.getElementById('status').value = document.getElementById('status-select').value; // ใช้ .value
            this.style.display = 'none';
            document.getElementById('status-popup').style.display = 'none';
            checkAllInputs();
        });
    
        // ปุ่ม Cancel
        document.getElementById('read-time-cancel-btn').addEventListener('click', function () {
        document.getElementById('read-time-popup').style.display = 'none';
        });

        document.getElementById('read-pages-cancel-btn').addEventListener('click', function () {
        document.getElementById('read-pages-popup').style.display = 'none';
        });

        document.getElementById('status-cancel-btn').addEventListener('click', function () {
        document.getElementById('status-popup').style.display = 'none';
        });
  
        // ตรวจสอบการเปลี่ยนแปลงใน input ทุกช่อง
        document.querySelectorAll('#read-time, #read-pages, #status').forEach(input => {
            input.addEventListener('input', checkAllInputs);
        });
    
        // ปุ่ม Save All
        document.getElementById('saveButton').addEventListener('click', function () {
            alert('บันทึกข้อมูลทั้งหมดเรียบร้อย!');

        // ซ่อนปุ่ม saveButton หลังจากบันทึกสำเร็จ
        this.style.display = 'none';
        });

        function showPopup(popupId) {
            document.getElementById(popupId).style.display = 'block';
            document.getElementById("overlay").style.display = 'block';
        }

        function hidePopup(popupId) {
            document.getElementById(popupId).style.display = 'none';
            document.getElementById("overlay").style.display = 'none';
        }

        document.getElementById("read-time-group").addEventListener("click", function() {
            showPopup("read-time-popup");
        });

        document.getElementById("read-time-cancel-btn").addEventListener("click", function() {
            hidePopup("read-time-popup");
        });

        document.getElementById("read-pages-group").addEventListener("click", function() {
            showPopup("read-pages-popup");
        });

        document.getElementById("read-pages-cancel-btn").addEventListener("click", function() {
            hidePopup("read-pages-popup");
        });

        document.getElementById("status-group").addEventListener("click", function() {
            showPopup("status-popup");
        });

        document.getElementById("status-cancel-btn").addEventListener("click", function() {
            hidePopup("status-popup");
        });
    </script>
</body>
</html>
