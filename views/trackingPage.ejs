                <label for="pages">Total Pages</label>
                <input type="text" id="pages" placeholder="add number of page">
            </div>
        </div>
    </div>

    <div class="bottom-bar">

        <p>© 2025 BookWormSenpaiKawaiiReading | <a href="#">Privacy Policy</a> | <a href="#">Terms of Service</a></p>
        <div class="social-icons">
            <a href="https://www.facebook.com" target="_blank"><i class="fab fa-facebook"></i> Facebook</a>
            <a href="https://www.instagram.com" target="_blank"><i class="fab fa-instagram"></i> Instagram</a>
            <a href="https://www.twitter.com" target="_blank"><i class="fab fa-twitter"></i> Twitter</a>

        </div>
        <br>
        <br>
    </div>

    <!--munu side bar-->
    <script>
        function toggleMenu() {
            var menu = document.getElementById("menu");
            menu.classList.toggle("active");
        }
    </script>

    
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const dateInput = document.getElementById("date");
            const pagesInput = document.getElementById("pages");
            const saveButton = document.getElementById("saveButton");

        // ฟังก์ชันรีเซ็ตข้อมูลเมื่อหน้าโหลด
        function resetPage() {
            // รีเซ็ตค่าที่เก็บใน localStorage
            localStorage.clear();

            // รีเซ็ตค่าฟอร์ม
            dateInput.value = '';
            pagesInput.value = '';
        
            // ลบการเลือกของปุ่ม
            document.querySelectorAll(".button-group button").forEach((btn) => {
                btn.classList.remove("active-button");
        });

        // ซ่อนปุ่มบันทึกเมื่อเริ่มต้น
        saveButton.style.display = "none";
        }

        // ฟังก์ชันบันทึกข้อมูล
        function saveData() {
            const selectedBookType = document.querySelector('.button-group button.active-button')?.getAttribute('data-value');
            const selectedProgressType = document.querySelector('.button-group button.active-button')?.getAttribute('data-value');
            const date = dateInput.value;
            const pages = pagesInput.value;

            if (date && selectedBookType && selectedProgressType && pages) {
                localStorage.setItem("readingDate", date);
                localStorage.setItem("bookType", selectedBookType);
                localStorage.setItem("progressType", selectedProgressType);
                localStorage.setItem("pages", pages);

                // แสดงข้อความ "บันทึกสำเร็จ"
                const successMessage = document.getElementById("successMessage");
                successMessage.style.display = "block"; // แสดงข้อความ
                setTimeout(() => {
                    successMessage.style.display = "none"; // ซ่อนข้อความหลังจาก 3 วินาที
                }, 3000);

                // ซ่อนปุ่ม "บันทึก"
                saveButton.style.display = "none"; // ซ่อนปุ่ม
            }
        }

        // ตรวจสอบการกรอกข้อมูล
        function checkInputs() {
            if (dateInput.value && pagesInput.value) {
                saveButton.style.display = "flex"; // แสดงปุ่มเมื่อกรอกข้อมูลครบ
            } else {
                saveButton.style.display = "none"; // ซ่อนปุ่มเมื่อกรอกข้อมูลไม่ครบ
            }
        }

        // ฟังก์ชันโหลดข้อมูลที่บันทึกไว้ (ไม่ใช้ในกรณีนี้)
        function loadSavedData() {
            // คุณอาจจะไม่ต้องการโหลดข้อมูลที่บันทึกไว้หลังจากรีเซ็ต
            resetPage(); // เรียกใช้งาน reset ทุกครั้งที่โหลดหน้า
        }

        // รีเซ็ตค่าฟอร์มเมื่อหน้าโหลด
        loadSavedData();

        // Event Listeners
        dateInput.addEventListener("input", checkInputs);
        pagesInput.addEventListener("input", checkInputs);
    
        // สำหรับปุ่มที่เลือก
        document.querySelectorAll(".button-group button").forEach((button) => {
            button.addEventListener("click", function () {
                // ล้าง active-button ออกจากปุ่มในกลุ่มเดียวกัน
                this.parentNode.querySelectorAll("button").forEach((btn) => btn.classList.remove("active-button"));
                this.classList.add("active-button"); // เพิ่ม class ให้ปุ่มที่ถูกเลือก
                checkInputs();
            });
        });

        saveButton.addEventListener("click", saveData);
        });
    </script>
</body>
